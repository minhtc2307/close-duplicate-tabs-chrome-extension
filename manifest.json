{
  "manifest_version": 3,
  "name": "Close Duplicate Tabs",
  "version": "1.0",
  "description": "A simple Chrome extension to close all duplicate tabs",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "resources/images/icon-16.png",
      "32": "resources/images/icon-32.png",
      "64": "resources/images/logo-64.png",
      "128": "resources/images/logo-128.png"
    }
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}